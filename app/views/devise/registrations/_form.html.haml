= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
  - f.object.captcha = ''
  = f.input :nickname, :input_html => {:autofocus => true}
  = f.input :email
  = f.input :password
  - if Siteconf.show_captcha?
    = f.input :captcha
    .control-group
      .controls
        = image_tag captcha_path(:format => :gif), :class => :captcha
  .form-actions
    = f.submit t('.sign_up_for', :site_name => Siteconf.site_name), :class => 'btn btn-small btn-primary'

